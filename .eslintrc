{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "modules": true,
    }
  },
  "globals": {
    "ReactDOM": false,
    "React": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb",
  "rules": {
    "quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "strict": [2],
    "comma-dangle": [2, "never"],
    "semi": [2],
    "id-length": [0],
    "no-undef": [2],
    "func-names": [0],
    "no-fallthrough": "error",
    "new-cap": 0,
    "no-console": 0,
    "react/prop-types": 0,
    "react/prefer-es6-class": 0,
    "no-var": 0,
    "object-shorthand": 0,
    "react/no-multi-comp": 0,
    "no-underscore-dangle": 0,
    "prefer-arrow-callback": 0
  },
}